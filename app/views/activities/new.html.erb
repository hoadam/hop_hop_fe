<h1>Create Activity</h1>

<%= form_with url: user_trip_daily_itinerary_activities_path(current_user.id, params[:trip_id], params[:daily_itinerary_id]), data: {turbo: false}, local: true do |f| %>
    <%= f.label :name, "Activity Name" %>
    <%= f.text_field :name %>

    <%= f.label :address, "Address" %>
    <%= f.text_field :address %>

    <%= f.label :expenses, "Expense" %>
    <%= f.text_field :expenses %>

    <%= f.label :description, "Description" %>
    <%= f.text_field :description %>

    <%= f.submit "Create Activity" %>
<% end %>
