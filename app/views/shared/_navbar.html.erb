<nav class="container mx-auto grid grid-cols-12">
  <div>
    <%= link_to image_tag("hop-hop.png", alt: "Hop-Hop Logo", id: "logo"), root_path, data: { turbo_method: :get } %>
  </div>
  <% if current_user %>
    <div class="col-start-11 col-end-12 content-center">
      <%= link_to 'Dashboard', user_path(current_user.id), class: "link border rounded-md", data: { turbo_method: :get } %>
    </div>
    <div class="col-start-12 col-end-13 content-center">
      <%= link_to 'Log Out', logout_path, method: :delete, class: "link border rounded-md" %>
    </div>
  <% else %>
    <div class="col-start-11 col-end-12 content-center">
      <%= link_to 'Log In', user_login_path, class: "link border rounded-md", data: { turbo_method: :get } %>
    </div>
    <div class="col-start-12 col-end-13 content-center">
      <%= link_to 'Sign Up', register_user_path, class: "link border rounded-md", data: { turbo_method: :get } %>
    </div>
  <% end %>
</nav>
