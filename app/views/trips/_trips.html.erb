<%= simple_form_for :trip, url: path, method: method, data: { turbo: false } do |f| %>
  <%= f.input :name, label: 'Trip Name', :label_html => { :class => 'text-white quicksand weight-bold' } %>
  <%= f.input :location, :label_html => { :class => 'text-white quicksand weight-bold' } %>
  <%= f.input :start_date, as: :date, :label_html => { :class => 'text-white quicksand weight-bold' } %>
  <%= f.input :end_date, as: :date, :label_html => { :class => 'text-white quicksand weight-bold' } %>
  <%= f.input :total_budget, as: :integer, :label_html => { :class => 'text-white quicksand weight-bold' } %>

  <%= f.button :submit, button %>
<% end %>
