<div class="pt-40 flex items-center justify-center h-screen">
  <div class="w-full max-w-sm p-4 bg-white border border-gray-200 rounded-lg shadow sm:p-6 md:p-8 dark:bg-gray-800 dark:border-gray-700">
    <%= link_to sanitize("&larr; Back to Trip"), trip_path(@trip.id), class: "btn" %>
    <h5 class="text-xl font-medium text-gray-900 dark:text-white text-center">Edit <%= @trip.name %></h5>
    <div data-controller="trips">
      <div id="searchForm">
        <%= render partial: "trips", locals: {
            path: trip_path(@trip.id),
            method: :patch,
            trip_name: @trip.name,
            trip_location: @trip.location,
            start_date: @trip.start_date,
            end_date: @trip.end_date,
            total_budget: @trip.total_budget,
            button: "Submit"
        } %>
      </div>
    </div>
  </div>
</div>

<h1>Edit Trip</h1>
<div data-controller="trips">
    <div id="searchForm">
    </div>
<%= form_with url: trip_path(params[:id]), method: :patch, data: {turbo: false}, local: true do |f| %>
    <%= f.label :name, "Trip Name" %>
    <%= f.text_field :name, value: @trip.name %>

    <%= f.label :location, "Location" %>
    <%= f.text_field :location, value: @trip.location%>

    <%= f.label :start_date, "Start Date" %>
    <%= f.date_field :start_date, value: @trip.start_date %>

    <%= f.label :end_date, "End Date" %>
    <%= f.date_field :end_date, value: @trip.end_date %>

    <%= f.label :total_budget, "Total Budget" %>
    <%= f.text_field :total_budget, value: @trip.total_budget %>

    <%= f.hidden_field :lat %>
    <%= f.hidden_field :lon %>

    <%= f.submit "Update Trip" %>
<% end %>
</div>
