<p>Name: <%= @user.full_name %></p>
<h1>Account Details</h1>
<p>Name: <%= @user.name %></p>
<p>Email: <%= @user.email %></p>

<%= button_to 'Logout', logout_path, method: :delete, class: "px-4 py-2 bg-slate-500 text-white rounded hover:bg-green-500" %>

<h2 class="text-2xl font-bold my-4">Current Trips</h2>
<div>
  <% @trips.each do |trip| %>
    <div class="p-4 mb-4 border border-gray-200 rounded">
      <p class="font-semibold">Trip Name: <%= trip.name %></p>
      <p>Start Date: <%= trip.start_date %></p>
      <p>End Date: <%= trip.end_date %></p>
      <%= button_to 'Edit', user_trip_path(@user, trip), class: "px-3 py-1 bg-slate-500 text-white rounded hover:bg-green-500 mr-2" %>
      <%= button_to 'Delete', user_trip_path(@user, trip), method: :delete, data: { confirm: 'Are you sure?' }, class: "px-3 py-1 bg-slate-500 text-white rounded hover:bg-green-500" %>
    </div>
  <% end %>
</div>
