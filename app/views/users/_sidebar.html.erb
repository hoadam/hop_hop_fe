<aside id="logo-sidebar" class="fixed top-0 left-0 z-40 w-64 h-screen pt-20 transition-transform -translate-x-full bg-white border-r border-gray-200 sm:translate-x-0 dark:bg-gray-800 dark:border-gray-700" aria-label="Sidebar">
   <div class="pt-8 h-full px-3 pb-4 overflow-y-auto bg-white dark:bg-gray-800">
      <ul class="space-y-2 font-medium">
         <li>
            <a href="#" class="flex items-center p-2 text-gray-900 rounded-lg dark:text-white hover:bg-gray-100 dark:hover:bg-blue-700 group">
               <%= tag.svg xmlns: "http://www.w3.org/2000/svg", fill: "none", viewBox: "0 0 24 24", stroke_width: "1.5", stroke: "currentColor", class: "w-6 h-6" do %>
               <path stroke-linecap="round" stroke-linejoin="round" d="M3 13.125C3 12.504 3.504 12 4.125 12h2.25c.621 0 1.125.504 1.125 1.125v6.75C7.5 20.496 6.996 21 6.375 21h-2.25A1.125 1.125 0 0 1 3 19.875v-6.75ZM9.75 8.625c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125v11.25c0 .621-.504 1.125-1.125 1.125h-2.25a1.125 1.125 0 0 1-1.125-1.125V8.625ZM16.5 4.125c0-.621.504-1.125 1.125-1.125h2.25C20.496 3 21 3.504 21 4.125v15.75c0 .621-.504 1.125-1.125 1.125h-2.25a1.125 1.125 0 0 1-1.125-1.125V4.125Z" />
               <% end %>
               <span class="ms-3">Travel Stats</span>
            </a>
         </li>
         <li>
            <%= link_to discover_index_path, class: "flex items-center p-2 text-gray-900 rounded-lg dark:text-white hover:bg-gray-100 dark:hover:bg-blue-700 group", data: { turbo_method: :get } do %>
               <%= tag.svg xmlns: "http://www.w3.org/2000/svg", fill: "none", viewBox: "0 0 24 24", stroke_width: "1.5", stroke: "currentColor", class: "w-6 h-6" do %>
               <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
               <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1 1 15 0Z" />
               <% end %>
               <span class="flex-1 ms-3 whitespace-nowrap">Discover</span>
            <% end %>
            
            </a>
         </li>
         <li>
            <%= link_to new_trip_path, class: "flex items-center p-2 text-gray-900 rounded-lg dark:text-white hover:bg-gray-100 dark:hover:bg-blue-700 group", data: { turbo_method: :get } do %>
               <%= tag.svg xmlns: "http://www.w3.org/2000/svg", fill: "none", viewBox: "0 0 24 24", stroke_width: "1.5", stroke: "currentColor", class: "w-6 h-6" do %>
               <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />

               <% end %>
               <span class="flex-1 ms-3 whitespace-nowrap">Create Trip</span>
            <% end %>
            </a>
         </li>
         <div class="flex items-center p-2 text-gray-900 rounded-lg dark:text-white -100 dark:hover:bg-blue-700 group"">
            <%= tag.svg xmlns: "http://www.w3.org/2000/svg", fill: "none", viewBox: "0 0 24 24", stroke_width: "1.5", stroke: "currentColor", class: "w-6 h-6" do %>
              <path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12Z" />
            <% end %>
            <span class="ml-3">Favorite Trips</span>
          </div>
          
         </li>
         <% @trips.each do |trip| %>
            <li>
               <%= link_to trip_path(trip.id), class: "flex items-center p-2 text-gray-900 rounded-lg dark:text-white hover:bg-gray-100 dark:hover:bg-blue-700 group" do %>
                  <%= tag.svg xmlns: "http://www.w3.org/2000/svg", fill: "none", viewBox: "0 0 24 24", stroke_width: "1.5", stroke: "currentColor", class: "w-6 h-6" do %>
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9 6.75V15m6-6v8.25m.503 3.498 4.875-2.437c.381-.19.622-.58.622-1.006V4.82c0-.836-.88-1.38-1.628-1.006l-3.869 1.934c-.317.159-.69.159-1.006 0L9.503 3.252a1.125 1.125 0 0 0-1.006 0L3.622 5.689C3.24 5.88 3 6.27 3 6.695V19.18c0 .836.88 1.38 1.628 1.006l3.869-1.934c.317-.159.69-.159 1.006 0l4.994 2.497c.317.158.69.158 1.006 0Z" />
                  <% end %>
                  <span class="flex-1 ms-3 whitespace-nowrap"><%= trip.name %></span>
                  <span class="inline-flex items-center justify-center px-2 ms-3 text-sm font-medium text-gray-800 bg-gray-100 rounded-full dark:bg-gray-700 dark:text-gray-300">
                  <% if trip.status != "complete" %>
                  !
                  <% else %>
                  Done
                  <% end %>
                  </span>
               <% end %>
                <%= button_to "Delete", trip_path(trip.id), method: :delete, class: "bg-red-400 rounded-lg p-2 h-10 hover:scale-105 transition-all duration-200" %>
            </li>
         <% end %>
      </ul>
   </div>
</aside>

<div class="p-4 sm:ml-64">
   <div class="p-4 border-2 border-green border-dashed rounded-lg dark:border-green mt-14">
      <div class="flex items-center justify-center h-20 mb-4 rounded bg-blue dark:bg-green">
         <p class="text-2xl text-mint dark:text-gray-500">
            Current Trips
         </p>
      </div>
      <div class="grid grid-cols-2 gap-4 mb-4">
         <% @trips.each do |trip| %>
            <% if trip.status != "completed" %>
               <%= link_to trip_path(trip.id), data: { turbo_method: :get } do %>
                  <div class="flex items-center justify-center rounded bg-blue-50 h-28 dark:bg-gray-800">
                     <p class="text-2xl text-gray-400 dark:text-gray-500">
                        <svg class="w-3.5 h-3.5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 18 18">
                        </svg>
                        <%= trip.location %>
                     </p>
                  </div>
               <% end %>
            <% end %>
         <% end %>
      </div>
      <div class="flex items-center justify-center h-20 mb-4 rounded bg-blue dark:bg-green">
         <p class="text-2xl text-mint dark:text-gray-500">
            Past Trips
         </p>
      </div>
      <div class="grid grid-cols-2 gap-4">
         <% @trips.each do |trip| %>
            <% if trip.status != "in_progress" %>
               <div class="flex items-center justify-center rounded bg-blue-50 h-28 dark:bg-gray-800">
                  <p class="text-2xl text-gray-400 dark:text-gray-500">
                     <svg class="w-3.5 h-3.5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 18 18">
                     </svg>
                  </p>
               </div>
            <% end %>
         <% end %>
      </div>
   </div>
</div>
