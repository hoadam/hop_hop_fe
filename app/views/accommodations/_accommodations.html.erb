<%= simple_form_for :accommodations, url: path, method: method, data: { turbo: false } do |f| %>
  <%= f.input :name, label: 'Accommodation Name', input_html: { value: name }, :label_html => { :class => 'text-white quicksand weight-bold' } %>
  <%= f.input :address, input_html: { value: address }, :label_html => { :class => 'text-white quicksand weight-bold' } %>
  <%= f.input :check_in, as: :date, input_html: { value: check_in }, :label_html => { :class => 'text-white quicksand weight-bold' } %>
  <%= f.input :check_out, as: :date, input_html: { value: check_out }, :label_html => { :class => 'text-white quicksand weight-bold' } %>
  <%= f.input :expenses, as: :integer, input_html: { value: expenses }, :label_html => { :class => 'text-white quicksand weight-bold' } %>

  <%= f.button :submit, button %>
<% end %>
