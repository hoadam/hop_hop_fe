<h1>Create Accommodation</h1>
<div data-controller="accommodations">
    <div id="searchForm">
    </div>

    <%= form_with url: user_trip_accommodations_path(params[:user_id], params[:trip_id]), data: {turbo: false}, local: true do |f| %>
        <%= f.label :name, "Accommodation Name" %>
        <%= f.text_field :name %>
        <br/>
        <%= f.label :address, "Address" %>
        <%= f.text_field :address %>
        <br/>
        <%= f.label :check_in, "Check In" %>
        <%= f.date_field :check_in %>
         <br/>
        <%= f.label :check_out, "Check Out" %>
        <%= f.date_field :check_out %>
 <br/>
        <%= f.label :expenses, "Expenses" %>
        <%= f.text_field :expenses %>
 <br/>
        <%= f.submit "Create Accommodation" %>
    <% end %>
</div>
